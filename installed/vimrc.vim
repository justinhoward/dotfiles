" turn on syntax highlighting
syntax enable

" use the monokai color scheme in the colors directory
colorscheme monokai

" use automatic tab indentation
set shiftwidth=4
set tabstop=4
set softtabstop=4
set noexpandtab

" automatic indentation settings
filetype plugin indent on

" use unix line endings
set fileformat=unix
set fileformats=unix

" turn on incremental searching as you type
set incsearch