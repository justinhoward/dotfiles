[core]
	excludesfile = /home/justin/.gitignore-global

[color "diff"]
	frag = magenta
	meta = yellow
	new = green
	old = red

[merge]
  tool = nvimdiff
  conflictstyle = diff3
  prompt = false

[mergetool]
  keepBackup = false

[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $MERGED
